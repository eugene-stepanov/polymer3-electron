{
  "npm": true,
  "lint": {
    "rules": [
      "polymer-3"
    ]
  },
  "sources": [
    "src/**.js",
    "manifest/**",
    "package.json",
    ".npmrc"
   ],
  "builds": [
    {
      "name": "es6-bundled",
      "js": {
        "compile": "es2015",
        "minify": false,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": false
      },
      "html": {
        "minify": false
      },
      "bundle": true,
      "addServiceWorker": true
    }
  ],
  "moduleResolution": "node"
}